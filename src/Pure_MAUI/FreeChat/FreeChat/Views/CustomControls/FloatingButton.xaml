<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreeChat.Views.CustomControls.FloatingButton"
             xmlns:local="clr-namespace:FreeChat.Views.CustomControls"
             xmlns:textRes="clr-namespace:FreeChat.Resources.Texts"
                         x:Name="floatingButton"
                        Stroke="{StaticResource LightShadowColor}"
                        Shadow="{StaticResource LightShadow}"
        xmlns:behaviors="clr-namespace:FreeChat.Views.Behaviors">

    <Border.Behaviors>
        <behaviors:ScaleViewOnTapBehavior/>
    </Border.Behaviors>

    <Border.StrokeShape>
        <RoundRectangle CornerRadius="60" />
    </Border.StrokeShape>
    
    <Border.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding PressedCommand}"/>
    </Border.GestureRecognizers>

    <Label HorizontalOptions="Center"
           VerticalOptions="Center"  
           FontSize="{Binding IconSize, Source={x:Reference floatingButton}}"
           TextColor="{Binding IconColor, Source={x:Reference floatingButton}}"
           Style="{StaticResource FontAwesomeLabel}"
           Text="{Binding Icon, Source={x:Reference floatingButton}}"/>

</Border>