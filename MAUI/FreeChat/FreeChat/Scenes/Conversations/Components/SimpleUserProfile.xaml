<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Models;assembly=Models"
             x:Class="FreeChat.Scenes.Conversations.Components.SimpleUserProfile"
             x:DataType="models:User">
    <Grid>
        <Image Source="{Binding ProfilePic}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HeightRequest="{OnPlatform Android=60, iOS=50}"
               WidthRequest="{OnPlatform Android=60, iOS=50}"
                Aspect="AspectFill">
            <Image.Clip>
                <EllipseGeometry
                    Center="50,50"
                    RadiusX="50"
                    RadiusY="50" />
            </Image.Clip>
        </Image>
        
        <Label Text="{StaticResource FontAwesomeCircle}"
               FontFamily="FontAwesome"
               IsVisible="{Binding IsOnline}"
               FontSize="Caption"
               HorizontalOptions="End"
               VerticalOptions="End"
               TextColor="{StaticResource ConnectedColor}">
            <Label.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="0,0,8,8"/>
                    <On Platform="iOS" Value="0,0,10,12"/>
                </OnPlatform>
            </Label.Margin>
        </Label>
    </Grid>
</ContentView>